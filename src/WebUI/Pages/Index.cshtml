@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <div class="alert alert-primary" role="alert">
        This is a primary alert—check it out!
    </div>

    <form asp-page-handler="CreateReservation" method="post" name="createReservation" id="create_reservation">
        <select asp-for="Rooms" asp-items="Model.Rooms" name="Id" id="Id"></select>
        <br /><button type="submit">Create Reservation</button>
    </form>

    <form asp-page-handler="GetAvailableRooms" method="post" name="getAvailableRooms" id="get_available_rooms">
        <label for="birthdaytime">StartDate</label>
        <input type="datetime-local" id="startDate" name="startDate" value="@ViewData["startDate"]">
        <label for="birthdaytime">EndDate</label>
        <input type="datetime-local" id="endDate" name="endDate" value="@ViewData["endDate"]">
        <input type="submit">
    </form>


</div>
