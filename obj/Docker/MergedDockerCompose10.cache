services:
  item.api:
    build:
      context: /Users/kaanaydemir/Projects/Dephion
      dockerfile: src/Item/Item.API/Dockerfile
      labels:
        com.microsoft.created-by: visual-studio
        com.microsoft.visual-studio.project-name: Item.API
      target: base
    container_name: itemapi
    depends_on:
      itemdb:
        condition: service_started
    entrypoint: tail -f /dev/null
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_LOGGING__CONSOLE__DISABLECOLORS: "true"
      DOTNET_USE_POLLING_FILE_WATCHER: '1'
      ItemDatabaseSettings:ConnectionString: mongodb://itemdb:27017
      NUGET_FALLBACK_PACKAGES: ''
    image: item:dev
    labels:
      com.microsoft.visualstudio.debuggee.arguments: ' --additionalProbingPath /root/.nuget/packages  "/app/bin/Debug/netcoreapp3.1/Item.API.dll"'
      com.microsoft.visualstudio.debuggee.killprogram: /bin/sh -c "if PID=$$(pidof
        dotnet); then kill $$PID; fi"
      com.microsoft.visualstudio.debuggee.program: dotnet
      com.microsoft.visualstudio.debuggee.workingdirectory: /app
    ports:
    - published: 8001
      target: 80
    tty: true
    volumes:
    - /Users/kaanaydemir/Projects/Dephion/src/Item/Item.API:/app:rw
    - /Users/kaanaydemir/vsdbg/vs2017u5:/remote_debugger:rw
    - /Users/kaanaydemir/.aspnet/https:/root/.aspnet/https:ro
    - /Users/kaanaydemir/.microsoft/usersecrets:/root/.microsoft/usersecrets:ro
    - /Users/kaanaydemir/.nuget/packages:/root/.nuget/packages:ro
    - /Users/kaanaydemir/Projects/Dephion:/src:rw
  itemdb:
    container_name: itemdb
    image: mongo
    ports:
    - published: 27018
      target: 27017
    restart: always
  reservation.api:
    build:
      context: /Users/kaanaydemir/Projects/Dephion
      dockerfile: src/Reservation/Reservation.API/Dockerfile
    container_name: reservationapi
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ConnectionStrings:ReservationConnection: Server=reservationdb;Database=ReservationDb;User
        Id=sa;Password=SwN12345678
    image: reservation
    ports:
    - published: 8002
      target: 80
    volumes:
    - /Users/kaanaydemir/.aspnet/https:/root/.aspnet/https:ro
    - /Users/kaanaydemir/.microsoft/usersecrets:/root/.microsoft/usersecrets:ro
  reservationdb:
    container_name: reservationdb
    environment:
      ACCEPT_EULA: "Y"
      SA_PASSWORD: SwN12345678
    image: mcr.microsoft.com/mssql/server
    ports:
    - published: 1433
      target: 1433
  room.api:
    build:
      context: /Users/kaanaydemir/Projects/Dephion
      dockerfile: src/Room/Room.API/Dockerfile
      labels:
        com.microsoft.created-by: visual-studio
        com.microsoft.visual-studio.project-name: Room.API
      target: base
    container_name: roomapi
    depends_on:
      roomdb:
        condition: service_started
    entrypoint: tail -f /dev/null
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_LOGGING__CONSOLE__DISABLECOLORS: "true"
      DOTNET_USE_POLLING_FILE_WATCHER: '1'
      NUGET_FALLBACK_PACKAGES: ''
      RoomDatabaseSettings:ConnectionString: mongodb://roomdb:27017
    image: room:dev
    labels:
      com.microsoft.visualstudio.debuggee.arguments: ' --additionalProbingPath /root/.nuget/packages  "/app/bin/Debug/netcoreapp3.1/Room.API.dll"'
      com.microsoft.visualstudio.debuggee.killprogram: /bin/sh -c "if PID=$$(pidof
        dotnet); then kill $$PID; fi"
      com.microsoft.visualstudio.debuggee.program: dotnet
      com.microsoft.visualstudio.debuggee.workingdirectory: /app
    ports:
    - published: 8000
      target: 80
    tty: true
    volumes:
    - /Users/kaanaydemir/Projects/Dephion/src/Room/Room.API:/app:rw
    - /Users/kaanaydemir/vsdbg/vs2017u5:/remote_debugger:rw
    - /Users/kaanaydemir/.aspnet/https:/root/.aspnet/https:ro
    - /Users/kaanaydemir/.microsoft/usersecrets:/root/.microsoft/usersecrets:ro
    - /Users/kaanaydemir/.nuget/packages:/root/.nuget/packages:ro
    - /Users/kaanaydemir/Projects/Dephion:/src:rw
  roomdb:
    container_name: roomdb
    image: mongo
    ports:
    - published: 27017
      target: 27017
    restart: always
version: '3.4'